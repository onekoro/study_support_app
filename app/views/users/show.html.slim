= provide(:title, @user.name)
.container.user_show
  .row.align-items-center
    .col-lg-2
    .col-lg-2.col-sm-3
      = image_tag @user.image.url, class: "border border-dark rounded-circle img-fluid"
    .col-lg-4.col-sm-6
      h2 #{@user.name}
      .follow.d-flex
        .following
          = link_to "#{@user.following.count}フォロー中", following_user_path(@user), class: "m-1 text-left"
        .followers
          = link_to "#{@user.followers.count}フォロワー", followers_user_path(@user), class: "m-1 text-right"
    .col-lg-2.col-sm-3
      - if current_user?(@user)
        = link_to "プロフィール編集", edit_user_path(current_user), class: "btn btn btn-primary btn-sm btn-block my-3"
        = link_to "アカウント削除", @user, method: :delete,　data: { confirm: "本当に削除しますか？" }, class: "btn btn btn-danger btn-sm btn-block my-3"
      - elsif logged_in?
        div id='show_follow_form'
          - if current_user.following?(@user)
            = render partial: 'unfollow', locals: { user: @user }
          - else
            = render partial: 'follow', locals: { user: @user }
    .col-lg-2
  .row
    .my_post.my_content.col-3.p-3.d-flex.align-items-center.justify-content-center.border-bottom.border-primary.position-relative
      = link_to "投稿", user_path(@user), class: "stretched-link"
    .likes_post.my_content.col-3.p-3.d-flex.align-items-center.justify-content-center.border-bottom.position-relative
      = link_to "いいね", like_show_user_path(@user), class: "stretched-link text-secondary"
    .follow.my_content.col-3.p-3.d-flex.align-items-center.justify-content-center.border-bottom.position-relative
      = link_to "フォロー", following_user_path(@user), class: "stretched-link text-secondary"
    .follower.my_content.col-3.p-3.d-flex.align-items-center.justify-content-center.border-bottom.position-relative
      = link_to "フォロワー", followers_user_path(@user), class: "stretched-link text-secondary"
  .row.places
    - if @places
      = render @places
    