- else
  = form_with model: current_user.active_relationships.build, remote: true, class: "inlink" do |f|
    = hidden_field_tag :followed_id, @user.id
    = f.submit "フォローする", class: "btn btn-outline-primary btn-sm btn-block my-3"
    
- else
  = form_with model: current_user.active_relationships.find_by(followed_id: @user.id), html: { method: :delete }, remote: true, class: "inlink" do |f|
    = f.submit "フォロー中", class: "btn btn-primary btn-sm btn-block my-3"